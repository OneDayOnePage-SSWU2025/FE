<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <include layout="@layout/fragment_memo_topnav" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/pageSpinner"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_spinner_round"
            android:spinnerMode="dropdown"
            android:popupBackground="@drawable/bg_spinner_popup"
            android:dropDownVerticalOffset="120dp"
            android:dropDownHeight="140dp" />
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <android.widget.Button
        android:id="@+id/goPre"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_allow_left"/>
    <TextView
        android:id="@+id/emptyMemoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메모가 아직 없습니다."
        android:textSize="16sp"
        android:textColor="@color/deepgreen"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/memoRecyclerView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="504dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:clipToPadding="false" />
    <android.widget.Button
        android:id="@+id/goNext"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_allow_left"
        android:rotation="180"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_gravity="fill_horizontal"
        >
        <TextView
            android:id="@+id/botInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="책제목"
            android:textSize="28sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/botInfoAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="w저자"
            android:textSize="18sp"
            />

    </LinearLayout>
    <SeekBar
        android:id="@+id/pageSeekBar"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:progress="1"
        android:max="140"
         android:thumb="@null"
        android:clipOrientation="horizontal"
        android:gravity="left"

        android:progressDrawable="@drawable/bg_page_progress" />

</LinearLayout>
