<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF9"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddGroup"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:background="@drawable/tab_selected_bg"
                android:text="+"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="독서사랑단"
                    android:textSize="13sp"
                    android:textColor="#A8A4A4"
                    android:background="@drawable/tab_unselected_bg"
                    android:layout_marginEnd="8dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnGroup2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="애니덕후모임"
                    android:textSize="13sp"
                    android:textColor="#A8A4A4"
                    android:background="@drawable/tab_unselected_bg"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/outline_gray_box">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMakeGroup"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_deepgreen_rounded"
                android:text="새 교환독서방 만들기"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnJoinGroup"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_green_outline"
                android:text="교환독서방 가입하기"
                android:textColor="#4A6B4E"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="123dp"
            android:orientation="vertical"
            android:background="@drawable/bg_bottom_info"
            android:padding="16dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="-50dp"
            android:layout_marginBottom="8dp"
            android:elevation="3dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친구들과 교환독서 하는 방법"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n- 교환독서방 만들기\n- 코드 등록하기"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
